<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".admindashboard"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@id/logodyalna"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
        android:src="@drawable/logodyalna" />
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent">


        </LinearLayout>
        <ImageView
            android:id="@id/Power"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/circle_mov"
            android:src="@drawable/ic_baseline_power_settings_new_24"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="0dp"

        android:layout_margin="5dp">
        <TextView
            android:id="@id/bienvenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:text="@string/Bienvenue"
            android:textColor="@color/green1"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@id/adminconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:text="name"
            android:textColor="@color/green1"
            android:textSize="25dp"

            />


    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
        android:paddingTop="0dp"
      android:layout_margin="5dp">

     <com.google.android.material.card.MaterialCardView
         android:layout_width="130dp"
         android:layout_height="150dp"
         android:layout_margin="10dp"
         android:id="@id/gestionClient"
         app:cardElevation="5dp">

         <LinearLayout
             android:layout_width="122dp"
             android:layout_height="match_parent"
             android:gravity="center"
             android:orientation="vertical">

             <ImageView
                 android:id="@id/client"
                 android:layout_width="64dp"
                 android:layout_height="64dp"
                 android:background="@drawable/circle_mov"
                 android:contentDescription="@string/todo"
                 android:padding="15dp"
                 android:src="@drawable/ic_client" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:background="@color/LightGrey" />

             <TextView
                 android:id="@id/txtclient"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:padding="5dp"
                 android:text="@string/gestion_clients"
                 android:textColor="@color/textColor"
                 android:textStyle="bold" />


         </LinearLayout>
     </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
          android:layout_width="130dp"
          android:layout_height="150dp"
          android:layout_margin="10dp"
          android:id="@id/gestionSeance"
          app:cardElevation="5dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center">

              <ImageView
                  android:id="@id/seance"
                  android:layout_width="64dp"
                  android:layout_height="64dp"
                  android:background="@drawable/circle_purple"
                  android:src="@drawable/ic_seance"
                  android:padding="15dp" />
              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/LightGrey"
                  android:layout_marginTop="10dp"
                  />

              <TextView
                  android:id="@id/txtsence"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/gestion_seances"
                  android:textStyle="bold"
                  android:padding="5dp"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/textColor"/>


          </LinearLayout>
      </com.google.android.material.card.MaterialCardView>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:id="@id/gestionsalarie"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@id/salarie"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_green"
                    android:src="@drawable/ic_baseline_supervised_user_circle_24"
                    android:padding="15dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrey"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@id/txtsalarie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gestion_salaries"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:id="@id/gestiontache"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@id/tache"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_red"
                    android:src="@drawable/ic_tache"
                    android:padding="15dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrey"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@id/txttache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gestion_taches"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:id="@id/Note"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@id/note"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_yellow"
                    android:src="@drawable/ic_baseline_notes_24"
                    android:padding="15dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrey"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@id/txtnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:id="@id/Presence"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@id/presence"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/pink"
                    android:src="@drawable/ic_baseline_notes_24"
                    android:padding="15dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/LightGrey"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@id/txtpresence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Presence"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>